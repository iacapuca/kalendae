<div class='flex items-center space-x-4'>
  <div class='flex-1'>
    <input
      type='text'
      value={{@timeslot.activityName}}
      class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
    />
    <input
      type='text'
      value={{@timeslot.date}}
      class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
    />
    <div class='flex flex-row'>
      <input
        type='text'
        value={{@timeslot.startTime}}
        class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-[50px] p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
      />
      <span class='mx-2 dark:text-gray-400'>-</span>
      <input
        type='text'
        value={{@timeslot.endTime}}
        class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-[50px] p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
      />
    </div>
  </div>
  <div
    class='flex flex-col h-full rounded-lg relative bg-transparent mt-1 items-center max-'
  >
    <button
      data-action='decrement'
      class='bg-transparent h-full w-6 cursor-pointer outline-none' type="button"
    >
      <span
        class='m-auto text-2xl font-bold hover:font-black text-gray-700 dark:text-white'
      >+</span>
    </button>
    <input
      class='inline-flex items-center text-base text-center rounded-full bg-transparent border px-3 py-1 font-semibold text-gray-900 dark:text-white outline-none'
      value={{@timeslot.numMaxGuests}}
      type='number'
    />
    <button
      data-action='increment'
      class='bg-gray-300 text-gray-600 hover:text-gray-700 hover:bg-gray-400 h-full w-6 rounded cursor-pointer' type="button"
    >
      <span class='m-auto text-2xl font-thin'>-</span>
    </button>
  </div>
</div>
<div class='flex flex-row mt-4 space-x-4'>
  <button
    type='button'
    class='flex items-center rounded-lg bg-blue-500 px-4 py-2 text-white'
    disabled
  >
    Save
  </button>
  <button
    type='button'
    class='flex items-center rounded-lg bg-red-500 px-4 py-2 text-white'
  >
    Cancel
  </button>
</div>