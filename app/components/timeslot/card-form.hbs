<div class='flex items-center space-x-4'>
  <div class='flex-1 min-w-0 space-y-4'>
    <Input
      data-test-input-activity
      aria-label='Activity Name'
      @type='text'
      @value={{this.activityName}}
      class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
    />
    <Input
      aria-label='Activity Date'
      @type='date'
      @value={{this.pickedDate}}
      class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
    />
    <div class='flex flex-row'>
      <Input
        aria-label='Start time'
        @type='time'
        min='00:00'
        max='24:00'
        @value={{this.startTime}}
        class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
      />
      <span class='mx-2 dark:text-gray-400'>-</span>
      <Input
        aria-label='End time'
        @type='time'
        min='00:00'
        max='24:00'
        @value={{this.endTime}}
        class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
      />
    </div>
  </div>
  <div
    class='inline-flex flex-col h-full rounded-lg relative bg-transparent mt-1 items-center max-w-[45px]'
  >
    <Input
      aria-label='Max number of Guests'
      class='max-w-full items-center text-base text-center rounded-full bg-transparent border px-3 py-1 font-semibold text-gray-900 dark:text-white outline-none'
      @value={{this.numMaxGuests}}
      @type='number'
    />
  </div>
</div>
<div class='flex flex-row mt-4 space-x-4'>
  <button
    data-test-save-button={{@timeslot.id}}
    {{on 'click' this.editRecord}}
    type='button'
    class='bg-white text-gray-800 font-bold rounded border-b-2 border-blue-500 hover:border-blue-600 hover:bg-blue-500 hover:text-white shadow-md py-2 px-6 inline-flex items-center'
  >
    Save
  </button>
  <button
    {{on 'click' @toggleEditMode}}
    type='button'
    class='bg-white text-gray-800 font-bold rounded border-b-2 border-red-500 hover:border-red-600 hover:bg-red-500 hover:text-white shadow-md py-2 px-6 inline-flex items-center'
  >
    Cancel
  </button>
</div>