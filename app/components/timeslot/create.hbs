<form {{on 'submit' this.onSubmit}} class='space-y-2'>
  <label
    class='text-sm font-medium text-gray-900 truncate dark:text-white'
    for='timeslot-activityName'
  >Activity Name</label>
  <Input
    id='timeslot-activityName'
    @type='text'
    @value={{this.activityName}}
    placeholder='Give the activity a name'
    class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
  />

  <label
    class='text-sm font-medium text-gray-900 truncate dark:text-white'
    for='timeslot-activityName'
  >Activity Date</label>
  <div class='relative'>
    <div
      class='absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none'
    >
      <svg
        class='w-5 h-5 text-gray-500 dark:text-gray-400'
        fill='currentColor'
        viewBox='0 0 20 20'
        xmlns='http://www.w3.org/2000/svg'
      ><path
          fill-rule='evenodd'
          d='M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z'
          clip-rule='evenodd'
        ></path></svg>
    </div>
    <input
      {{on 'input' this.pickDate}}
      value='2017-06-01'
      type='date'
      class='pl-10 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
      placeholder='Select a date'
    />
  </div>
  <label
    class='text-sm font-medium text-gray-900 truncate dark:text-white'
    for='timeslot-activityName'
  >Start time</label>
  <Input
    class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
    @type='time'
    id='appt'
    name='appt'
    min='00:00'
    max='24:00'
    @value={{this.startTime}}
    required
  />
  <label
    class='text-sm font-medium text-gray-900 truncate dark:text-white'
    for='timeslot-activityName'
  >End time</label>
  <Input
    class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
    @type='time'
    id='appt'
    name='appt'
    min='00:00'
    max='24:00'
    @value={{this.endTime}}
    required
  />
  <label
    class='text-sm font-medium text-gray-900 truncate dark:text-white'
    for='quantity'
  >Max Number of Guests:</label>
  <Input
    class='border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 focus-visible:outline-none focus-visible:ring-blue-500 focus-visible:border-blue-500 block w-fit p-1.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
    @type='number'
    id='quantity'
    name='quantity'
    placeholder='1'
    min='1'
    @value={{this.numMaxGuests}}
  />
  <button
    class='bg-white text-gray-800 font-bold rounded border-b-2 border-blue-500 hover:border-blue-600 hover:bg-blue-500 hover:text-white shadow-md py-2 px-6 inline-flex items-center'
    type='submit'
  >Submit</button>
</form>